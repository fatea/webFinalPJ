doctype html
html(lang='zh-CN')
    head
        meta(charset='UTF-8')
        title 编辑页面
        link(href='/stylesheets/edit.css', rel='stylesheet', type='text/css')
    body
        #wrapper
            #postList.right.midwrap.container
                .header
                    p.title 发博文
                    form#editForm.editBox(method='POST', action= ''+actionURL )
                        #newEdit
                            p#editTitle 标题:
                            textarea#titleArea(name='titleArea') #{title}
                            textarea#editArea(name='editArea')  #{content}
                            ul.editTagList
                                li
                                    span 分类:
                                    select#categorySelect(name='categorySelect')
                                        -for(var i = 0; i < categoryArr.length; i++)
                                            -if(categoryArr[i].category != presentCategory)
                                                option(value= categoryArr[i].category ) #{categoryArr[i].category}
                                            -else
                                                option(value= categoryArr[i].category , selected = 'selected') #{categoryArr[i].category}
                                    a#newCategory.tag.newCategory(href='') 创建分类
                                li
                                    span 标签:
                                    textarea#tagArea(name='tagArea', placeholder='填写标签, 让更多人看到你的博文')
                            input#editSubmit.submit.buttons(type='submit', value='发博文')
        footer
            p Copyright © 1996 - 2014 SINA Corporation, All Rights Reserved
            p 新浪公司 版权所有

        script(type = 'text/javascript', src='/javascripts/lib/require.js' data-main='/javascripts/edit')